
@{
    ViewBag.Title = "ChiTietSach";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>ChiTietSach</h2>

<div class="thumbnail">
    <h4 class="tensach">
        @Model.TenSach
    </h4>
    <img src="~/Image/@Model.AnhBia" alt="@Model.TenSach" />
    <div class="motasach">
        <p>
            @Html.Raw(@Model.MoTa.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp"))
        </p>
    </div>
    <p class="ngaycapnhat">Ngày cập nhật: @Html.FormatValue(@Model.NgayCapNhat, "{0:dd/MM/yyyy}") </p>
    <p class="giaban">Giá bán: @Html.FormatValue(@Model.GiaBan, "{0:#,##0}") </p>
    <p class="addtocard">
        <a href="@Url.Action("ThemGioHang","GioHang", new { ms = Model.MaSach, url = Request.Url.ToString() })"
           class="btn btn-primary" role="button">
            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>Add to Card
        </a>
    </p>
</div>

