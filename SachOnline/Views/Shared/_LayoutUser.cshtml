<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js" ></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</head>
<body>
    @Html.Action("NavPartial", "SachOnline")
    @Html.Action("SliderPartial", "SachOnline")

    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <!--CHỦ ĐỀ và NHÀ XUẤT BẢN-->
                @Html.Action("ChuDePartial", "SachOnline")
                @Html.Action("NhaXuatBanPartial", "SachOnline")
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @RenderBody()
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @Html.Action("SachBanNhieuPartial", "SachOnline")
                @Html.Action("FooterPartial", "SachOnline")
            </div>
            <hr>
        </div>
    </div>
    @*@RenderSection("SachBanNhieuPartial", required:false)*@


</body>
</html>
