
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/Style2.css">

</head>
<body>
    <form action="~/Admin/Home/Login" method="post" class="box login">
        <fieldset class="boxBody">
            <main>
                <div class="row">
                    <div class="colm-logo">
                        <h2>Sách Online Xin Chào Các Bạn</h2>
                    </div>
                    <div class="colm-form">
                        <div class="form-container">
                            <input type="text" name="UserName" placeholder="Tên Đăng Nhập" required>
                            <input type="password" name="Password" placeholder="Mật Khẩu" required>
                            <p style="font-style:italic; color:red; margin:0px;">@ViewBag.ThongBao</p>
                            <input type="submit" class="btnLogin" value="Đăng nhập">
                            <a href="#">Quên mật khẩu</a>
                            <button class="btn-new">Đăng kí</button>
                        </div>
                    </div>
                </div>
            </main>
        </fieldset>
        <footer>
            <div class="footer-contents">
                <ol>
                    <li>English (UK)</li>
                    <li><a href="#">മലയാളം</a></li>
                    <li><a href="#">தமிழ்</a></li>
                    <li><a href="#">తెలుగు</a></li>
                    <li><a href="#">বাংলা</a></li>
                    <li><a href="#">اردو</a></li>
                    <li><a href="#">हिन्दी</a></li>
                    <li><a href="#">ಕನ್ನಡ</a></li>
                    <li><a href="#">Español</a></li>
                    <li><a href="#">Português (Brasil)</a></li>
                    <li><a href="#">Français (France)</a></li>
                    <li><button>+</button></li>

                </ol>
                <small>2022</small>
            </div>
        </footer>
    </form>
</body>
</html>
